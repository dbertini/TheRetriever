<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <File name="MyFile" fileName="retriever.log" immediateFlush="true" append="true">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </File>
        <SMTP name="Mail" subject="Report Retrivier" to="david.bertini@gmail.com" from="david.bertini@gmail.com" smtpHost="smtp.gmail.com" smtpPort="25">
        </SMTP>
    </Appenders>
    <Loggers>
        <Logger name="it.db.retriever" level="trace" additivity="false">
            <AppenderRef ref="MyFile" level="info"/>
            <AppenderRef ref="Console" level="info" />
            <AppenderRef ref="Mail" level="error"/>
        </Logger>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>